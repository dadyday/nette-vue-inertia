root = true

[*]
charset = utf-8
end_of_line = crlf
indent_size = 4
indent_style = tab
insert_final_newline = false
max_line_length = 120
tab_width = 4

[{*.latte,*.php}]
indent_style = tab

[*.vue]
indent_size = 2
tab_width = 2

[{*.cjs,*.js}]
indent_size = 2
tab_width = 2

[{*.markdown,*.md}]
indent_style = space
indent_size = 2
tab_width = 2

[{*.yaml,*.yml,*.neon}]
indent_size = 4
